# Storyverse Environment Variables Example
# Copy this file to .env and fill in your values

# CRITICAL: Canonical Production Domain
# This domain is used for ALL SEO-related URLs (canonical, Open Graph, sitemap, etc.)
# For production: https://storyverse.co.in
# For development: http://localhost:5173
VITE_APP_URL=https://storyverse.co.in

# Firebase Configuration
# Get these from Firebase Console > Project Settings
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# Build Metadata (Optional)
VITE_BUILD_VERSION=1.0.0
VITE_BUILD_TIME=auto
